        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f4f0fa;
            color: #4b0082;
        }
        .navbar {
            background-color: #6a0dad !important;
        }
        .navbar-brand, .nav-link {
            color: #f4f0fa !important;
        }
        .nav-link:hover {
            color: #d4bfff !important;
        }
        main {
            padding-top: 2rem;
